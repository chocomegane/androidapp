<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#000000"
    tools:context="com.example.ownrer.tesuto2.LoginActivity">


    <TextView
        android:id="@+id/view_name"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        android:text="登録画面"/>

    <LinearLayout
        android:id="@+id/password_text_eria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_alignTop="@+id/view_name"
        android:gravity="center">

        <TextView
            android:id="@+id/password_text"
            android:layout_width="@dimen/nature_textview_width"
            android:layout_height="@dimen/nature_textview_height"
            android:background="@color/text_view_color"
            android:gravity="center"
            android:text="@string/password_text"
            android:textColor="#000000" />


        <EditText
            android:layout_width="@dimen/nature_textbox_width"
            android:layout_height="@dimen/nature_textbox_height"
            android:id="@+id/password"
            android:background="#ffffff"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/email_text_eria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignTop="@+id/password_text_eria"
        android:gravity="center">

        <TextView
            android:id="@+id/email_text"
            android:layout_width="@dimen/nature_textview_width"
            android:layout_height="@dimen/nature_textview_height"
            android:background="@color/text_view_color"
            android:gravity="center"
            android:text="@string/email_text"
            android:textColor="#000000" />

        <EditText
            android:layout_width="@dimen/nature_textbox_width"
            android:layout_height="@dimen/nature_textbox_height"
            android:id="@+id/email"
            android:background="#ffffff"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/username_text_eria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignTop="@+id/email_text_eria"
        android:gravity="center">

        <TextView
            android:id="@+id/username"
            android:layout_width="@dimen/nature_textview_width"
            android:layout_height="@dimen/nature_textview_height"
            android:background="@color/text_view_color"
            android:gravity="center"
            android:text="ユーザ名"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/username_text"
            android:layout_width="@dimen/nature_textbox_width"
            android:layout_height="@dimen/nature_textbox_height"
            android:background="#ffffff"
            android:textColor="#000000" />
    </LinearLayout>


    <Button
        android:id="@+id/regist"
        android:layout_width="@dimen/nature_button_width"
        android:layout_height="@dimen/nature_button_height"
        android:background="@color/button_color"
        android:gravity="center"
        android:text="登録"
        android:textColor="#000000"
        android:layout_marginTop="103dp"
        android:layout_below="@+id/username_text_eria"
        android:layout_alignStart="@+id/username_text_eria" />
</RelativeLayout>
